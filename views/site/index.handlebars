{{>header}}
   
<div class="home">
   <div class="wrapper">
      <div class="posts">
         {{#each allData}}
            <a href="/single/{{_id}}" class="post target">
               <h1>{{title}}</h1>
               <img src="{{path}}" alt="content">
               <p>{{content}}</p>
               <div class="authorAndDate">
                  <span>{{name}}</span>
                  <span>{{date}}</span>
               </div>    
            </a>
         {{/each}}
      </div>
      <div class="sidebar">
         <div class="area target">
            <a href="/about"><h3>Ben Kimim?</h3></a> 
            <img src="/images/user/ata.png" alt="user">  
            <div class="categories">
               <span>#sports</span>
               <span>#events</span>
               <span>#ticketing</span>
               <span>#software</span>
            </div>
         </div>
         <div class="area target">
            <h3>Sizin İçin</h3>
            <a href="/admin/add">Paylaşımda bulun</a>
            <a href="#">İstatistikler</a>
            <a href="#">Görüntülenme Sayınız</a>
         </div>
      </div>
   </div>
</div>
{{>footer}}
